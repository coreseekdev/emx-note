# Test daily command
env EMX_NOTE_HOME=$WORK/.emx-notes
env EMX_AGENT_NAME=

# Create a capsa first (outputs path)
exec emx-note --home $WORK/.emx-notes -g capsa create test-daily
stdout '.emx-notes/test-daily'

# Create daily note with title (double quoted for Windows compatibility)
exec emx-note --home $WORK/.emx-notes -c test-daily daily "Meeting Notes"
stdout '#daily/'
stdout 'meeting-notes'

# Create daily note without title
exec emx-note --home $WORK/.emx-notes -c test-daily daily
stdout '#daily/'

# Verify #daily directory exists
exists $WORK/.emx-notes/test-daily/#daily

# Verify note/ directory exists
exists $WORK/.emx-notes/test-daily/note

# Verify daily link file exists (note/#daily.md)
exists $WORK/.emx-notes/test-daily/note/#daily.md
